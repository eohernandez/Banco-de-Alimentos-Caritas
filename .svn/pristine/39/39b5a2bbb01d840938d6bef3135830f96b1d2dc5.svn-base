<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.CreateUsuariosTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:panelGroup id="messagePanel" layout="block">
                <h:messages errorStyle="color: red" infoStyle="color: green" layout="table"/>
            </h:panelGroup>
            <h:form>
                <h:panelGrid columns="2">
                    <h:outputLabel value="#{bundle.CreateUsuariosLabel_IDUsuario}" for="IDUsuario" />
                    <h:inputText id="IDUsuario" value="#{usuariosController.selected.IDUsuario}" title="#{bundle.CreateUsuariosTitle_IDUsuario}" required="true" requiredMessage="#{bundle.CreateUsuariosRequiredMessage_IDUsuario}"/>
                    <h:outputLabel value="#{bundle.CreateUsuariosLabel_nombre}" for="nombre" />
                    <h:inputText id="nombre" value="#{usuariosController.selected.nombre}" title="#{bundle.CreateUsuariosTitle_nombre}" />
                    <h:outputLabel value="#{bundle.CreateUsuariosLabel_password}" for="password" />
                    <h:inputText id="password" value="#{usuariosController.selected.password}" title="#{bundle.CreateUsuariosTitle_password}" />
                    <h:outputLabel value="#{bundle.CreateUsuariosLabel_IDZona}" for="IDZona" />
                    <h:inputText id="IDZona" value="#{usuariosController.selected.IDZona}" title="#{bundle.CreateUsuariosTitle_IDZona}" />
                    <h:outputLabel value="#{bundle.CreateUsuariosLabel_IDNivel}" for="IDNivel" />
                    <h:selectOneMenu id="IDNivel" value="#{usuariosController.selected.IDNivel}" title="#{bundle.CreateUsuariosTitle_IDNivel}" >
                        <f:selectItems value="#{nivelAccesoController.itemsAvailableSelectOne}"/>
                    </h:selectOneMenu>
                </h:panelGrid>
                <br />
                <h:commandLink action="#{usuariosController.create}" value="#{bundle.CreateUsuariosSaveLink}" />
                <br />
                <br />
                <h:commandLink action="#{usuariosController.prepareList}" value="#{bundle.CreateUsuariosShowAllLink}" immediate="true"/>
                <br />
                <br />
                <h:commandLink value="#{bundle.CreateUsuariosIndexLink}" action="/index" immediate="true" />
            </h:form>
        </ui:define>
    </ui:composition>

</html>

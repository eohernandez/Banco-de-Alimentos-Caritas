    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.TipoDonTitle}"></h:outputText>
        </ui:define>
        
        <ui:define name="actionTitle">
            <h:outputText value="#{bundle.Edit}"/>
        </ui:define>

        <ui:define name="displayDataSection">
            <p:panel header="Datos" style="border: 1px #000000 solid; display: block; margin-bottom: 0.25em">
                <h:outputLabel value="#{bundle.TipoDonLabel_IDTipoDon}" for="IDTipoDon" >
                    <p:selectOneMenu id="IDTipoDon" value="#{tipoDonController.selected.IDTipoDon}"
                                     required="true" requiredMessage="#{bundle.TipoDonRequiredMessage_NullSelected}"
                                     filter="true" filterMatchMode="contains">
                        <f:selectItem itemLabel="Seleccione uno" itemValue=" " />
                        <f:selectItems value="#{tipoDonController.itemsAvailableSelectIDNoNull}"/>
                        <p:ajax event="change" update="@form" listener="#{tipoDonController.view(tipoDonController.selected.IDTipoDon)}" />
                    </p:selectOneMenu>
                    <p:message id="idTipoDonIconMessage" for="IDTipoDon" display="icon" />
                </h:outputLabel>
                <h:outputLabel value="#{bundle.TipoDonLabel_tipoDon}" for="tipoDon" >
                    <p:inputText id="tipoDon"
                                 value="#{tipoDonController.selected.tipoDon}"
                                 title="#{bundle.TipoDonTitle_tipoDon}"
                                 required="true"
                                 requiredMessage="#{bundle.RequiredMessage_NullSelected_Key}"
                                 maxlength="20"
                                 validatorMessage="#{bundle.TipoDonValidatorMessage_TipoDon}"
                                 style="text-transform: uppercase">
                        <f:validateRegex pattern="[a-zA-ZÑñ\s]+[0-9a-zA-ZÑñ\s]*" />
                    </p:inputText>
                    <p:message id="tipoDonIconMessage" for="tipoDon" display="icon" />
                </h:outputLabel>
            </p:panel>
        </ui:define>
        
        <ui:define name="tools">
            <comp:editTools controller="#{tipoDonController}" />
        </ui:define>
        
    </ui:composition>


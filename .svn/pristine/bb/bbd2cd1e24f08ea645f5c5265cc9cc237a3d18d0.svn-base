<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:cc="http://java.sun.com/jsf/composite"
      xmlns:comp="http://java.sun.com/jsf/composite/comp"
      xmlns:p="http://primefaces.org/ui">

    <!-- INTERFACE -->
    <cc:interface>
        <cc:attribute name="controller" required="true" />
    </cc:interface>
    
    <cc:implementation>
        <comp:homeLink />
        <p:commandLink 
            action="#{cc.attrs.controller.prepareCreate}"
            styleClass="btn-agregar"
            value="#{bundle.New}"
            title="#{bundle.New}"
            ajax="false"
            immediate="true"
            rendered="#{authorizationController.accesos.nuevo}"
            />
        <p:commandLink 
            action="#{cc.attrs.controller.prepareList}"
            styleClass="btn-show-all"
            value="#{bundle.ShowAll}"
            title="#{bundle.ShowAll}" 
            ajax="false"
            immediate="true"
            />  
        <p:commandLink 
            action="#{cc.attrs.controller.prepareEditNoRow}" 
            styleClass="btn-editar" 
            value="#{bundle.Edit}" 
            title="#{bundle.Edit}" 
            ajax="false"
            immediate="true" 
            rendered="#{authorizationController.accesos.editar}" 
            />
        <p:commandLink 
            action="#{cc.attrs.controller.destroyNoRow}"
            styleClass="btn-eliminar"
            value="#{bundle.Destroy}"
            title="#{bundle.Destroy}"
            onclick="if(!confirm('#{bundle.ConfirmDestroy}')) return false;"
            ajax="false"
            immediate="true"
            rendered="#{authorizationController.accesos.borrar}"
            />
    </cc:implementation>
</html>
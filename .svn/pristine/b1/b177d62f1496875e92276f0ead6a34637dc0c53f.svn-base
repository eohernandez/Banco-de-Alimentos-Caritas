package com.caritas.entity;

import java.math.BigDecimal;
import java.math.RoundingMode;

public class DistribucionAMBA {
    
    private boolean recibe;
    private String remision;
    private String nombreBA;
    private int poblacion;
    private double porcentaje;
    private double kilogramos;
    private int piezas;
    private double flete;
    private String observaciones;
    
    public DistribucionAMBA(boolean recibe, String remision, String nombreBA,
            int poblacion, double porcentaje, double kilogramos,
            int piezas, double flete, String observaciones) {
        this.recibe = recibe;
        this.remision = remision;
        this.nombreBA = nombreBA;
        this.poblacion = poblacion;
        this.porcentaje = porcentaje;
        this.kilogramos = kilogramos;
        this.piezas = piezas;
        this.flete = flete;
        this.observaciones = observaciones;
    }
    
    // <editor-fold defaultstate="collapsed" desc="Setters & Getters">
    public boolean getRecibe() {
        return recibe;
    }
    
    public void setRecibe(boolean recibe) {
        this.recibe = recibe;
    }
    
    public String getRemision() {
        return remision;
    }

    public void setRemision(String remision) {
        this.remision = remision;
    }

    public String getNombreBA() {
        return nombreBA;
    }

    public void setNombreBA(String nombreBA) {
        this.nombreBA = nombreBA;
    }

    public int getPoblacion() {
        if(recibe) {
            return poblacion;
        } else {
            return 0;
        }
    }

    public void setPoblacion(int poblacion) {
        this.poblacion = poblacion;
    }

    public double getPorcentaje() {
        return porcentaje;
    }
    
    public String getPorcentajeString() {
        BigDecimal big = new BigDecimal(porcentaje);
        return big.setScale(1, RoundingMode.HALF_UP).toString() + " %";
    }

    public void setPorcentaje(double porcentaje) {
        this.porcentaje = porcentaje;
    }

    public double getKilogramos() {
        return kilogramos;
    }
    
    public String getKilogramosString() {
        BigDecimal big = new BigDecimal(kilogramos);
        return big.setScale(2, RoundingMode.HALF_UP).toString();
    }

    public void setKilogramos(double kilogramos) {
        this.kilogramos = kilogramos;
    }
    
    public int getPiezas() {
        return piezas;
    }
    
    public void setPiezas(int piezas) {
        this.piezas = piezas;
    }
    
    public void setPiezasDouble(double piezas) {
        BigDecimal big = new BigDecimal(piezas);
        big = big.setScale(0, RoundingMode.HALF_UP);
        
        this.piezas = big.intValue();
    }

    public double getFlete() {
        return flete;
    }
    
    public String getFleteString() {
        String fleteString = "$";
        
        if (flete == 0.0) {
            fleteString = fleteString.concat(" - ");
        } else {
            fleteString = fleteString.concat(String.valueOf(flete));
        }
        
        return fleteString;
    }
    

    public void setFlete(double flete) {
        this.flete = flete;
    }

    public String getObservaciones() {
        return observaciones;
    }

    public void setObservaciones(String observaciones) {
        this.observaciones = observaciones;
    }
    // </editor-fold>
    
}

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui"
      xmlns:comp="http://java.sun.com/jsf/composite/comp">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.ArticulosTitle}"></h:outputText>
        </ui:define>

        <ui:define name="actionTitle" >
            <h:outputText value="#{bundle.Create}" />
        </ui:define>
        
        <ui:define name="tools">
            <comp:createTools controller="#{articulosList}" />
        </ui:define>

        <ui:define name="displayDataSection">
            <h:panelGroup id="controls">
                <h:panelGroup rendered="#{articulosList.selected != null}">
                    <p:panelGrid columns="4" styleClass="center">
                        <p:outputLabel value="#{bundle.ArticulosLabel_IDArticulo}" for="IDArticulo" />
                        <p:inputText id="IDArticulo" value="#{articulosList.selected.IDArticulo}" title="#{bundle.ArticulosTitle_IDArticulo}" required="true" requiredMessage="#{bundle.ArticulosRequiredMessage_IDArticulo}"/>

                        <p:outputLabel value="#{bundle.ArticulosLabel_articulo}" for="articulo" />
                        <p:inputText id="articulo" value="#{articulosList.selected.articulo}" title="#{bundle.ArticulosTitle_articulo}" size="50" required="true" requiredMessage="#{bundle.ArticulosRequiredMessage_Articulo}" onchange="$(this).val($(this).val().toUpperCase());" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_IDGrupoAlim}" for="IDGrupoAlim" />
                        <p:autoComplete  id="IDGrupoAlim" value="#{articulosList.selected.IDGrupoAlim}" completeMethod="#{grupoAlimCompleter.complete}" var="item" itemLabel="#{item.grupoAlim}" itemValue="#{item}" forceSelection="true" dropdown="true" global="false" title="#{bundle.ArticulosTitle_IDGrupoAlim}" size="50">
                            <f:facet name="itemtip">
                                <h:outputText value="#{item.idGrupoAlim}" />
                            </f:facet>
                        </p:autoComplete>

                        <p:outputLabel value="#{bundle.ArticulosLabel_IDVariedad}" for="IDVariedad" />
                        <p:autoComplete id="IDVariedad" value="#{articulosList.selected.IDVariedad}" completeMethod="#{variedadCompleter.complete}" var="item" itemLabel="#{item.variedad}" itemValue="#{item}" forceSelection="true" dropdown="true" global="false" title="#{bundle.ArticulosTitle_IDArticulo}" size="50"/>

                        <p:outputLabel value="#{bundle.ArticulosLabel_IDDonante}" for="IDDonante" />
                        <p:autoComplete id="IDDonante"  value="#{articulosList.selected.IDDonante}"  completeMethod="#{donantesCompleter.complete}" var="item" itemLabel="#{item.donante}"  itemValue="#{item}" forceSelection="true" dropdown="true" global="false" title="#{bundle.ArticulosTitle_IDDonante}" size="50" />


                        <p:outputLabel value="#{bundle.ArticulosLabel_IDGrupoRef}" for="IDGrupoRef" />
                        <p:autoComplete id="IDGrupoRef"  value="#{articulosList.selected.IDGrupoRef}"  completeMethod="#{grupoRefCompleter.complete}" var="item" itemLabel="#{item.grupoRef}"  itemValue="#{item}" forceSelection="true" dropdown="true" global="false" title="#{bundle.ArticulosTitle_IDGrupoRef}" size="50" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_localizacion}" for="localizacion" />
                        <p:inputText id="localizacion" value="#{articulosList.selected.localizacion}" title="#{bundle.ArticulosTitle_localizacion}" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_almacen}" for="almacen" />
                        <p:selectOneRadio id="almacen" value="#{articulosList.selected.almacen}">
                            <f:selectItem itemLabel="#{bundle.Almacen_A}" itemValue="A" />
                            <f:selectItem itemLabel="#{bundle.Almacen_C}" itemValue="C" />
                        </p:selectOneRadio>
                    </p:panelGrid>

                    <p:panelGrid columns="6" styleClass="center">
                        <f:facet name="header">
                            <p:outputLabel value="#{bundle.ArticulosLabel_unidadMed1}" for="unidadMed1" />
                            <p:selectOneMenu id="unidadMed1" value="#{articulosList.selected.unidadMed1}" required="true" requiredMessage="#{bundle.ArticulosRequiredMessage_Unidad1}" >
                                <f:selectItems value="#{unidadController.itemsAvailableSelectOne}"/>
                            </p:selectOneMenu>
                        </f:facet>

                        <p:outputLabel value="#{bundle.ArticulosLabel_costoBenef1}" for="costoBenef1" />
                        <p:inputText id="costoBenef1" value="#{articulosList.selected.costoBenef1}" title="#{bundle.ArticulosTitle_costoBenef1}" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_cuotaRecup1}" for="cuotaRecup1" />
                        <p:inputText id="cuotaRecup1" value="#{articulosList.selected.cuotaRecup1}" title="#{bundle.ArticulosTitle_cuotaRecup1}" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_reorden1}" for="reorden1" />
                        <p:inputText id="reorden1" value="#{articulosList.selected.reorden1}" title="#{bundle.ArticulosTitle_reorden1}" />
                    </p:panelGrid>

                    <p:panelGrid columns="6" styleClass="center">
                        <f:facet name="header">
                            <p:outputLabel value="#{bundle.ArticulosLabel_unidadMed2}" for="unidadMed2" />
                            <p:selectOneMenu id="unidadMed2" value="#{articulosList.selected.unidadMed2}" required="true" requiredMessage="#{bundle.ArticulosRequiredMessage_Unidad2}" >
                                <f:selectItems value="#{unidadController.itemsAvailableSelectOne}"/>
                            </p:selectOneMenu>
                        </f:facet>

                        <p:outputLabel value="#{bundle.ArticulosLabel_costoBenef2}" for="costoBenef2" />
                        <p:inputText id="costoBenef2" value="#{articulosList.selected.costoBenef2}" title="#{bundle.ArticulosTitle_costoBenef2}" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_cuotaRecup2}" for="cuotaRecup2" />
                        <p:inputText id="cuotaRecup2" value="#{articulosList.selected.cuotaRecup2}" title="#{bundle.ArticulosTitle_cuotaRecup2}" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_reorden2}" for="reorden2" />
                        <p:inputText id="reorden2" value="#{articulosList.selected.reorden2}" title="#{bundle.ArticulosTitle_reorden2}" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_cantidadUni}" for="cantidadUni" />
                        <p:inputText id="cantidadUni" value="#{articulosList.selected.cantidadUni}" title="#{bundle.ArticulosTitle_cantidadUni}" />

                        <p:outputLabel value="#{bundle.ArticulosLabel_peso}" for="peso" />
                        <p:inputText id="peso" value="#{articulosList.selected.peso}" title="#{bundle.ArticulosTitle_peso}" />
                    </p:panelGrid>

                    <p:panelGrid columns="6" styleClass="center">
                        <p:outputLabel value="#{bundle.ArticulosLabel_factor}"/>
                        <p:inputText value="#{articulosList.selected.factor}" title="#{bundle.ArticulosTitle_factor}"/>

                        <p:outputLabel value="#{bundle.ArticulosLabel_PMercado1}"/>
                        <p:inputText value="#{articulosList.selected.PMercado1}" title="#{bundle.ArticulosTitle_PMercado1}"/>

                        <p:outputLabel value="#{bundle.ArticulosLabel_PMercado2}"/>
                        <p:inputText value="#{articulosList.selected.PMercado2}" title="#{bundle.ArticulosTitle_PMercado2}"/>
                    </p:panelGrid>
                </h:panelGroup>
            </h:panelGroup>
        </ui:define>
    </ui:composition>

</html>

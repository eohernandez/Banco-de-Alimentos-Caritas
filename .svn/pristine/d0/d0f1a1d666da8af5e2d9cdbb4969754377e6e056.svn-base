<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui"
      xmlns:comp="http://java.sun.com/jsf/composite/comp">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.ParametrosTitle}" />
        </ui:define>

        <ui:define name="dataTableSection" >
            <h:panelGroup>
                <p:dataTable id="dataTable" value="#{parametrosController.items}"
                             var="item" emptyMessage="#{bundle.ParametrosEmpty}"
                             paginatorTemplate=" {CurrentPageReport}  {PreviousPageLink} {PageLinks} {NextPageLink} {RowsPerPageDropdown}"
                             paginator="true" paginatorPosition="bottom" rowsPerPageTemplate="5,10,15,20" rows="10" >
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="#{bundle.ParametrosTitle_Parametro}"/>
                        </f:facet>
                        <h:outputText value="#{item.parametro}"/>
                    </p:column>
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="#{bundle.ParametrosTitle_valor}"/>
                        </f:facet>
                        <h:outputText value="#{item.valor}"/>
                    </p:column>
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="&nbsp;"/>
                        </f:facet>
                        <h:commandLink action="#{parametrosController.prepareView}" value="#{bundle.View}"/>
                        <h:outputText value=" "/>
                        <h:commandLink action="#{parametrosController.prepareEdit}" value="#{bundle.Edit}"/>
                        <h:outputText value=" "/>
                        <h:commandLink onclick="if(!confirm('#{bundle.ConfirmDestroy}')) return false;"
                                       action="#{parametrosController.destroy}" value="#{bundle.Destroy}"/>
                    </p:column>
                </p:dataTable>
            </h:panelGroup>
        </ui:define>
        
        <ui:define name="tools">
            <comp:listTools controller="#{parametrosController}" />
        </ui:define>
    </ui:composition>

</html>

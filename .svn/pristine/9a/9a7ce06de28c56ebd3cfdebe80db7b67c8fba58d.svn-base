<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.EditAreasTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:panelGroup id="messagePanel" layout="block">
                <h:messages errorStyle="color: red" infoStyle="color: green" layout="table"/>
            </h:panelGroup>
            <h:form>
                <h:panelGrid columns="2">
                    <h:outputLabel value="#{bundle.EditAreasLabel_IDArea}" for="IDArea" />
                    <h:inputText id="IDArea" value="#{areasController.selected.IDArea}" title="#{bundle.EditAreasTitle_IDArea}" required="true" requiredMessage="#{bundle.EditAreasRequiredMessage_IDArea}"/>
                    <h:outputLabel value="#{bundle.EditAreasLabel_area}" for="area" />
                    <h:inputText id="area" value="#{areasController.selected.area}" title="#{bundle.EditAreasTitle_area}" />
                    <h:outputLabel value="#{bundle.EditAreasLabel_distribucion}" for="distribucion" />
                    <h:inputText id="distribucion" value="#{areasController.selected.distribucion}" title="#{bundle.EditAreasTitle_distribucion}" />
                </h:panelGrid>
                <h:commandLink action="#{areasController.update}" value="#{bundle.EditAreasSaveLink}"/>
                <br />
                <br />
                <h:commandLink action="View" value="#{bundle.EditAreasViewLink}" immediate="true"/>
                <br />
                <h:commandLink action="#{areasController.prepareList}" value="#{bundle.EditAreasShowAllLink}" immediate="true"/>
                <br />
                <br />
                <h:commandLink value="#{bundle.EditAreasIndexLink}" action="/index" immediate="true" />
            </h:form>
        </ui:define>
    </ui:composition>

</html>

<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:cc="http://java.sun.com/jsf/composite"
      xmlns:comp="http://java.sun.com/jsf/composite/comp"
      xmlns:p="http://primefaces.org/ui">

    <!-- INTERFACE -->
    <cc:interface>
        <cc:attribute name="controller" required="true" />
    </cc:interface>

    <!-- IMPLEMENTATION -->
    <cc:implementation>
        <comp:homeLink />
        <p:commandLink 
            action="#{cc.attrs.controller.prepareList}" 
            styleClass="btn-show-all" 
            value="#{bundle.ShowAll}" 
            title="#{bundle.ShowAll}"
            ajax="false"
            immediate="true" 
            />
        <p:commandLink 
            ajax="false"
            rendered="#{authorizationController.accesos.nuevo}"
            action="#{cc.attrs.controller.create}" 
            value="#{bundle.Save}" 
            title="#{bundle.Save}" 
            styleClass="btn-guardar" 
            />
    </cc:implementation>
</html>
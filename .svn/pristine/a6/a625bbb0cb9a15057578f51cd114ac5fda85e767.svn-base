                <h:commandLink action="#{unidadController.create}" value="#{bundle.CreateUnidadSaveLink}" />
                <br />
                <br />
                <h:commandLink action="#{unidadController.prepareList}" value="#{bundle.CreateUnidadShowAllLink}" immediate="true"/>
                <br />
                <br />
                <h:commandLink value="#{bundle.CreateUnidadIndexLink}" action="/index" immediate="true" />
            </h:form>
        </ui:define>
    </ui:composition>


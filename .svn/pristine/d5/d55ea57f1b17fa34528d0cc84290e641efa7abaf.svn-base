<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui"
      xmlns:comp="http://java.sun.com/jsf/composite/comp">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.RespuestasTitle}"></h:outputText>
        </ui:define>
        <ui:define name="dataTableSection">
            <h:panelGroup id="messagePanel" layout="block">
                <h:messages errorStyle="color: red" infoStyle="color: green" layout="table"/>
            </h:panelGroup>
            <h:outputText escape="false" value="#{bundle.RespuestasEmpty}" rendered="#{respuestasController.items.rowCount == 0}"/>
            <h:panelGroup rendered="#{respuestasController.items.rowCount > 0}">
                <p:dataTable id="dataTable" value="#{respuestasController.items}" var="item" paginator="true" paginatorPosition="bottom" 
                    rows="5" rowsPerPageTemplate="5,10,15,20" lazy="true">
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="#{bundle.PreguntasTitle_IDPregunta}"/>
                        </f:facet>
                        <h:outputText value="#{item.respuestasPK.IDPregunta}"/>
                    </p:column>
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="#{bundle.RespuestasTitle_IDRespuesta}"/>
                        </f:facet>
                        <h:outputText value="#{item.respuestasPK.IDRespuesta}"/>
                    </p:column>
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="#{bundle.PreguntasTitle}"/>
                        </f:facet>
                        <h:outputText value="#{item.preguntas.descripcion}"/>
                    </p:column>
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="#{bundle.RespuestasTitle_Description}"/>
                        </f:facet>
                        <h:outputText value="#{item.descripcion}"/>
                    </p:column>
                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="&nbsp;"/>
                        </f:facet>
                        <comp:listRowTools controller="#{respuestasController}" />
                    </p:column>
                </p:dataTable>
            </h:panelGroup>
        </ui:define>
        <ui:define name="tools">
            <comp:listTools controller="#{respuestasController}" />
        </ui:define>
    </ui:composition>

</html>
